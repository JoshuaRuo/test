<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="15dp">

        <!--<ImageView-->
            <!--android:id="@+id/home_model_headimg"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="12dp"-->
            <!--android:scaleType="center"-->
            <!--android:src="@drawable/user_hear_img_icon" />
            -->

        <TextView
            android:id="@+id/home_model_headimg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:scaleType="center"
            android:textSize="@dimen/font_size_14sp"
            android:textColor="@color/white"
            android:background="@drawable/home_backlog_head_bg"
            android:text="罗洋"
            android:gravity="center"/>


        <TextView
            android:id="@+id/home_model_backlog_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/home_model_headimg"
            android:ellipsize="end"
            android:ems="12"
            android:lines="1"
            android:text="待办类型"
            android:layout_marginRight="5dp"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_size_14sp" />

        <TextView
            android:id="@+id/home_model_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:text="发起人"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_12sp"/>

        <TextView
            android:id="@+id/home_model_backlog_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_alignParentTop="true"
            android:ems="8"
            android:lines="1"
            android:layout_toRightOf="@+id/home_model_headimg"
            android:text="项目名称"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/font_size_18sp" />


        <TextView
            android:id="@+id/home_model_backlog_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:text="状态"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_14sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_E5E8F3" />
</LinearLayout>