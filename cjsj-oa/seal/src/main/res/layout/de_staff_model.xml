<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        >

        <FrameLayout
            android:id="@+id/destaff_model_headimg_layout"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/destaff_model_headimg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:textSize="@dimen/font_size_14sp"
                android:textColor="@color/white"
                android:background="@drawable/home_backlog_head_bg"
                android:text="罗洋"
                android:gravity="center"
                android:visibility="gone"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
                android:id="@+id/staff_model_detail_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                circleimageview:civ_border_color="@color/de_transparent"
                circleimageview:civ_border_overlay="false"
                circleimageview:civ_border_width="0dp"
                android:src="@drawable/mine_head_default_img"
                android:visibility="gone"

                />
        </FrameLayout>




        <TextView
            android:id="@+id/destaff_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓名"
            android:textColor="@color/text_black_color"
            android:textSize="@dimen/font_size_18sp"
            android:layout_toRightOf="@+id/destaff_model_headimg_layout"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"/>


        <TextView
            android:id="@+id/destaff_pos_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="职位名称"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_size_14sp"
            android:layout_toRightOf="@+id/destaff_model_headimg_layout"
            android:layout_marginLeft="10dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="14dp"
            />


    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="15dp"
        android:background="@color/color_E5E8F3" />
</LinearLayout>