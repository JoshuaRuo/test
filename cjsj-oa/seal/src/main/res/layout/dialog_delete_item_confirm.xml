<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/pop_bg"
        android:gravity="center_horizontal"
        android:paddingTop="25dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/update_version_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/txt_style_1"
                android:textSize="@dimen/text_size_20"
                android:text="您确认要删除这条记录吗?"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/separate_color_1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/dialog_delete_cancel"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:layout_marginRight="5dip"
                android:text="取消"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/text_color_1"
                android:textStyle="normal"
                android:singleLine="true"
                android:background="@null"/>

            <Button
                android:id="@+id/dialog_delete_confirm"
                android:layout_width="0dip"
                android:layout_height="50dip"
                android:layout_weight="1"
                android:layout_marginLeft="5dip"
                android:layout_marginRight="10dip"
                android:text="确定"
                android:textSize="@dimen/text_size_20"
                android:textColor="@color/edit_text_color_1"
                android:singleLine="true"
                android:background="@null"/>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>