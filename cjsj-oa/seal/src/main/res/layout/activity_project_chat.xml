<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gty_page_bgcolor"
    android:orientation="vertical">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/project_chat_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">


    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">


        <EditText
            android:id="@+id/project_chat_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/chat_edit_bg"
            android:layout_marginRight="15dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/project_submit_btn"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:hint="@string/project_please_enter_string"
            android:textSize="@dimen/font_size_14sp"
            android:textColorHint="@color/color_999999"
            android:textColor="@color/main_title_color_code"/>

        <Button
            android:id="@+id/project_submit_btn"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/rs_select_btn_blue"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14sp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:gravity="center"
            />


    </RelativeLayout>

</LinearLayout>