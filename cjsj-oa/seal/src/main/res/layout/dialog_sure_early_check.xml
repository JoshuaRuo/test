<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="212dp"
    android:orientation="vertical"
    android:background="@drawable/sure_early_check_bg"
    >

    <TextView
        android:id="@+id/check_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打卡时间"
        android:textColor="@color/text_black_color"
        android:textSize="@dimen/font_size_18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/check_dialog_time_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="08:32:00"
        android:textSize="@dimen/font_size_21sp"
        android:textColor="@color/text_black_color"
        android:layout_below="@+id/check_dialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/check_dialog_sure_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定要早退打卡吗？"
        android:textSize="@dimen/font_size_18sp"
        android:textColor="@color/color_fc472b"
        android:layout_below="@+id/check_dialog_time_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"/>


    <View
        android:id="@+id/check_dialog_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_E5E8F3"
        android:layout_below="@+id/check_dialog_sure_value"
        android:layout_marginTop="44dp"/>

    <LinearLayout
        android:id="@+id/check_dialog_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/check_dialog_line"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/check_early_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/cancel"
            android:textColor="@color/color_2293ff"
            android:textSize="@dimen/font_size_18sp"
            android:gravity="center"
            android:layout_weight="1"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/color_E5E8F3"
            android:layout_weight="0.001"/>
        <TextView
            android:id="@+id/check_early_ok"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/ac_select_friend_sure"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_18sp"
            android:gravity="center"
            android:layout_weight="1"/>

    </LinearLayout>

</RelativeLayout>