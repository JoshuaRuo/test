<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_menu_item_touch"
    android:padding="8dp"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/item_grid"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_menu_item_grid_func"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="3dp">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="@dimen/width_menu_image_grid_func"
            android:layout_height="@dimen/height_menu_image_grid_func"/>

        <TextView
            android:id="@+id/desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="周报"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/table_notification_icon_tv"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_gravity="center|top"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="7dp"
        android:visibility="invisible"
        android:background="@drawable/notification_icon_bg"
        android:gravity="center"/>
</FrameLayout>
