<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/main_title_layout"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentTop="true"
        android:background="@color/white" >

        <!--<ImageView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginLeft="14dp"-->
            <!--android:background="@drawable/seal_logo_icon"-->
             <!--/>-->
        <TextView
            android:id="@+id/main_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="14dp"
            android:text="@string/app_name"
            android:textColor="@color/main_title_color_code"
            android:textSize="@dimen/text_size_18"
            />
        <LinearLayout
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_alignParentRight="true">
            <ImageView
                android:id="@+id/ac_iv_search"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:visibility="invisible"
                android:src="@drawable/ac_title_search_icon"/>

            <ImageView
                android:id="@+id/home_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_marginRight="15dp"
                android:src="@drawable/news_icon" />
            <TextView
                android:id="@+id/home_filtrate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/font_size_16sp"
                android:textColor="@color/color_2293ff"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:text="筛选"/>
        </LinearLayout>


    </RelativeLayout>
    <View
        android:id="@+id/main_base_line_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_E5E8F3"/>
</LinearLayout>