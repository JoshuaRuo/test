<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/select_model_item_layout"
        android:layout_width="wrap_content"
        android:layout_height="75dp">

        <CheckBox
            android:id="@+id/select_model_checkbox"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            style="@style/CustomCheckBoxTheme"
            android:gravity="center"
            />
        <FrameLayout
            android:id="@+id/select_people_headimg_layout"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/select_model_checkbox">

            <TextView
                android:id="@+id/select_people_headimg"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:textSize="@dimen/font_size_14sp"
                android:textColor="@color/white"
                android:background="@drawable/home_backlog_head_bg"
                android:text="罗洋"
                android:gravity="center"/>
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
                android:id="@+id/select_people_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                circleimageview:civ_border_color="@color/de_transparent"
                circleimageview:civ_border_overlay="false"
                circleimageview:civ_border_width="0dp"
                android:src="@drawable/mine_head_default_img"

                />
        </FrameLayout>

        <TextView
            android:id="@+id/select_people_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/select_people_headimg_layout"
            android:text="罗洋"
            android:textColor="@color/main_title_color_code"
            android:textSize="@dimen/font_size_16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/select_people_org"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="部门"
            android:layout_toRightOf="@+id/select_people_headimg_layout"
            android:layout_alignParentBottom="true"
            android:textSize="@dimen/font_size_14sp"
            android:textColor="@color/color_66"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="16dp"/>

    </RelativeLayout>

    <View
        android:id="@+id/select_people_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_E5E8F3"
        android:layout_marginLeft="15dp"
        />

</LinearLayout>