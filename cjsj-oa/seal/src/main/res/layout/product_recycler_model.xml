<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/product_recycler_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="14dp">

        <TextView
            android:id="@+id/product_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="12dp"
            android:ellipsize="end"
            android:ems="8"
            android:lines="1"
            android:text="sdfsdfs"
            android:textColor="@color/main_title_color_code"
            android:textSize="@dimen/font_size_18sp" />

        <TextView
            android:id="@+id/product_item_principal_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:lines="1"
            android:text="sdfsdfs"
            android:textColor="@color/color_66"
            android:textSize="@dimen/font_size_14sp"
            android:layout_below="@+id/product_item_title_tv"
            android:layout_marginTop="10dp"/>


        <TextView
            android:id="@+id/product_item_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="14dp"
            android:gravity="center"
            android:textColor="@color/color_2293ff"
            android:textSize="@dimen/font_size_12sp"
            android:text="进行中"/>


        <TextView
            android:id="@+id/product_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:text="未开始"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_14sp"
            android:layout_below="@+id/product_item_status"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_E5E8F3" />
</LinearLayout>