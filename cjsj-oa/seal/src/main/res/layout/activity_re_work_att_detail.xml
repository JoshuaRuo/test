<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gty_page_bgcolor"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginTop="15dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/rework_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:src="@mipmap/recheck_detailprogress_bar" />

                <TextView
                    android:id="@+id/rework_detail_status_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="12dp"
                    android:text="已完成"
                    android:layout_toRightOf="@+id/rework_icon"
                    android:textColor="@color/color_04b600"
                    android:textSize="@dimen/font_size_14sp" />

                <TextView
                    android:id="@+id/rework_detial_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_size_14sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rework_detail_status_tv"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/rework_icon"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rework_detail_app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/color_66"
                        android:textSize="@dimen/font_size_14sp" />
                    <TextView
                        android:id="@+id/rework_detail_app_todo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="同意了你的申请"
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_size_14sp"
                        android:layout_marginLeft="5dp"/>
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:text="补卡类型"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_size_14sp" />

                <TextView
                    android:id="@+id/rework_detail_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:textColor="@color/main_title_color_code"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:text="补卡班次"
                        android:textColor="@color/color_66"
                        android:textSize="@dimen/font_size_14sp" />

                    <TextView
                        android:id="@+id/rework_detail_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/white"
                        android:textColor="@color/main_title_color_code"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/rework_detail_end_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/white"
                        android:text="补卡班次"
                        android:textColor="@color/color_66"
                        android:textSize="@dimen/font_size_14sp" />

                    <TextView
                        android:id="@+id/rework_detail_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="15dp"
                        android:background="@color/white"
                        android:textColor="@color/main_title_color_code"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="补卡原因"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_size_14sp" />

                <TextView
                    android:id="@+id/rework_detail_reason"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:text=""
                    android:textColor="@color/main_title_color_code"
                    android:textSize="@dimen/font_size_14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:text="审批人"
                    android:textColor="@color/main_title_color_code"
                    android:textSize="@dimen/font_size_14sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/rework_detail_headimg"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:background="@drawable/home_backlog_head_bg"
                        android:gravity="center"
                        android:scaleType="center"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_size_12sp" />

                    <TextView
                        android:id="@+id/rework_detail_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:text=""
                        android:textColor="@color/color_999999"
                        android:textSize="@dimen/font_size_14sp" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>