<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <FrameLayout
            android:id="@+id/project_member_headimg_layout"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/select_model_checkbox">

            <TextView
                android:id="@+id/member_model_name_title"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:text="测试"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_14sp"
                android:background="@drawable/project_item_right_notifiicon"
                android:gravity="center"
                android:layout_centerVertical="true"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:circleimageview="http://schemas.android.com/apk/res-auto"
                android:id="@+id/member_model_head_img"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:scaleType="centerCrop"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                circleimageview:civ_border_color="@color/de_transparent"
                circleimageview:civ_border_overlay="false"
                circleimageview:civ_border_width="0dp"
                android:src="@drawable/mine_head_default_img"

                />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/member_icon_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/project_member_headimg_layout"
            >
            <TextView
                android:id="@+id/member_project_leader_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="项目负责人"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12sp"
                android:background="@color/bg_yellow_color_deep"
                android:gravity="center"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />


            <TextView
                android:id="@+id/member_major_leader_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业负责人"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12sp"
                android:background="@color/color_00cc05"
                android:gravity="center"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:id="@+id/member_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成员"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_12sp"
                android:background="@color/color_6280fb"
                android:gravity="center"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/member_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/member_icon_layout"
            android:textColor="@color/main_title_color_code"
            android:text="测试"
            android:textSize="@dimen/font_size_18sp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="@color/color_E5E8F3"
        android:layout_marginTop="10dp"/>
</LinearLayout>