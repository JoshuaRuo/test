<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <View
        android:id="@+id/approval_plan_progress_line"
        android:layout_width="1px"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:background="@color/mine_head_color" />

    <RelativeLayout
        android:id="@+id/approval_plan_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/approval_plan_progress_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:scaleType="fitXY"
            android:src="@drawable/ongoing" />


        <TextView
            android:id="@+id/approval_plan_headimg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/approval_plan_progress_icon"
            android:background="@drawable/approval_head_gray_bg"
            android:gravity="center"
            android:scaleType="center"
            android:layout_centerInParent="true"
            android:text="姓名"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/approval_plan_headimg"
            android:gravity="left"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/approval_plan_from_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/color_66"
                android:textSize="@dimen/font_size_14sp" />

            <TextView
                android:id="@+id/approval_plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/main_title_color_code"
                android:textSize="@dimen/font_size_16sp"
                android:layout_marginTop="6dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/approval_plan_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="同意"
            android:textSize="@dimen/font_size_14sp"
            android:textColor="@color/color_66"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>
    </RelativeLayout>
</RelativeLayout>