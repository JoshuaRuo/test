<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gty_page_bgcolor"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/check_work_statistics_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <RelativeLayout
                android:id="@+id/check_to_rank_btn"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_list_item_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:text="@string/check_work_rank_title"
                    android:textColor="@color/main_title_color_code"
                    android:textSize="@dimen/font_size_16sp" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/gty_right_icon" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/white"
                android:layout_marginTop="15dp">


                <ImageView
                    android:id="@+id/check_month_collect_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/check_count_icon"
                    android:scaleType="center"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"/>

                <TextView
                    android:id="@+id/check_month_collect_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/check_month_collect_title"
                    android:layout_toRightOf="@+id/check_month_collect_img"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_66"
                    android:textSize="@dimen/font_size_14sp"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/check_month_value_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/check_month_collect_title_tv"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_size_14sp"
                    android:text="" />


                <TextView
                    android:id="@+id/check_select_month_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text=""
                    android:textSize="@dimen/font_size_14sp"
                    android:textColor="@color/color_66"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/check_select_month_icon"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="15dp"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/statistics_relativelayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="1px">


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>